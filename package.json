{
  "name": "ghsemver",
  "version": "1.0.0",
  "description": "Semantic versioning tool based on GitHub commit history and Conventional Commits",
  "keywords": [
    "semver",
    "semantic-release",
    "semantic-version",
    "version",
    "versioning",
    "conventional-commits",
    "github",
    "git",
    "cli"
  ],
  "homepage": "https://github.com/shared-utils/ghsemver#readme",
  "bugs": {
    "url": "https://github.com/shared-utils/ghsemver/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shared-utils/ghsemver.git"
  },
  "license": "ISC",
  "author": "shared-utils",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ghsemver": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "ACTION.md",
    "action.yml",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "build:action": "ncc build dist/action.js -o dist/action-bundle --source-map --license licenses.txt",
    "build:all": "npm run build && npm run build:action",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@octokit/rest": "^20.0.2",
    "commander": "^11.1.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/semver": "^7.5.6",
    "@vercel/ncc": "^0.38.4",
    "semantic-release": "^22.0.12",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
